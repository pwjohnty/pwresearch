                            <Label Text="Loading Questionnaire..." HorizontalOptions="Center" Margin="0,0,0,0" TextColor="Black" FontSize="Small" FontAttributes="Bold"></Label>

                        </StackLayout>

                        <StackLayout x:Name="neitherstack" IsVisible="false">
                            <Image Source="questionnaireicon.png" Margin="0,20,0,5"  VerticalOptions="CenterAndExpand" HeightRequest="50" WidthRequest="50"  HorizontalOptions="CenterAndExpand" />


                            <Label Text="Weekly Follow-Up Response" HorizontalOptions="Center" Margin="20,0,20,0" TextColor="Black" FontSize="22" FontAttributes="Bold" HorizontalTextAlignment="Center" 
                                 
                  

                                ></Label>

                            <Label  Text="Weekly Follow Up Question" TextColor="Black"  FontSize="10" Margin="20,10,0,0"/>

