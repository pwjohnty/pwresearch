     ProgressFill="#009fe3" Margin="10,0,10,10" TrackHeight="10" HeightRequest="10" ProgressCornerRadius="5" TrackCornerRadius="5"
            IsVisible="false"
            Progress="0" />
                <ScrollView x:Name="scroll" VerticalOptions="StartAndExpand">
                    <!--<ScrollView.Behaviors>
                        <anim:ScrollViewScrollBehavior x:Name="Scroll" />
                    </ScrollView.Behaviors>-->


