                                    <Label HorizontalOptions="StartAndExpand" x:Name="neitherdate" VerticalOptions="Center" Margin="20,10,0,0" TextColor="Black" FontAttributes="Bold" ></Label>
                                </StackLayout>

                            </Frame>


                            <Label  Text="Thank you for taking part in the IID3 Study" HorizontalOptions="Center" TextColor="Black" FontAttributes="Bold"  FontSize="14" Margin="0,20,0,0"/>


                        </StackLayout>



                        <StackLayout x:Name="liststack" IsVisible="false" >

                            <Image Source="questionnaireicon.png" Margin="0,20,0,5"  VerticalOptions="CenterAndExpand" HeightRequest="50" WidthRequest="50"  HorizontalOptions="CenterAndExpand" />


                            <Label x:Name="titlelbl" HorizontalOptions="Center" Margin="20,0,20,0" TextColor="Black" FontSize="22" FontAttributes="Bold" HorizontalTextAlignment="Center" 
                                  
                  


                                ></Label>

                            <Label x:Name="infolbl"  HorizontalOptions="Center" Margin="20,-5,20,0" TextColor="Gray" FontSize="Small" FontAttributes="Bold" HorizontalTextAlignment="Center"

                
                
                  

                    ></Label>


                            <Label x:Name="incidentlbl" IsVisible="false" Text="Weekly Follow Up Question" TextColor="Black"  FontSize="10" Margin="20,10,0,0"/>

                            <Frame CornerRadius="10"  Margin="10,0,10,0" 
                BackgroundColor="White" HasShadow="False" 
                BorderColor="White" x:Name="incidentframe" IsVisible="false"
                Padding="0">

